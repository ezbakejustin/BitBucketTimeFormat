{
  "manifest_version": 2,
  "name": "BitBucketTime - Dates as Timestamps",
  "description": "Replace the Atlassian Relative time with a TimeStamp",
  "version": "1.0.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "jquery.barebones.js",
        "date-1.0.A1.js",
        "converttime.js"
      ],
      "run_at": "document_start"
    }
  ]
}
